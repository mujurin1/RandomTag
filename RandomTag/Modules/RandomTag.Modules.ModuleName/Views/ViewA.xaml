<UserControl x:Class="RandomTag.Modules.ModuleName.Views.ViewA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             gif:ImageBehavior.AnimateInDesignMode="True"
             xmlns:local="clr-namespace:RandomTag.Modules.ModuleName.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="BlueViolet"/>
        <Border Grid.Row="1" Background="Orange"/>
        <Border Grid.Row="2" Background="Silver"/>
        <Image Grid.Row="0"
               gif:ImageBehavior.AnimatedSource="{Binding IMG}" />
    </Grid>
</UserControl>
